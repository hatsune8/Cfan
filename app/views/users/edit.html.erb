

<div class="row">
  <div class="container">

    <div class="col-xs-3"></div>

    <div class="col-xs-6">
      <div class="form-group">
        <%= form_with model:@user, local:true do |f| %>
          <div class="edit-purofile-image">
            <%= attachment_image_tag @user, :image, :fill, 300, 300, format: 'jpeg', class: "img-circle profile-image" %>
          </div>
          <%= f.attachment_field :image %>
          <%= f.text_field :name, class: "form-control input-lg", placeholder: "nameを入力して下さい" %>
          <%= f.text_area :introduction, class: "form-control input-lg", placeholder: "introductionを入力して下さい" %>
          <%= f.submit "変更を保存", class: "btn btn-default center-block form-btn btn-lg" %>
        <% end %>
      </div>
      <div class="withdrawal-btn">
        <%= link_to "退会する", user_withdrawal_path, class: "btn btn-danger" %>
      </div>

    </div>

    <div class="col-xs-3"></div>

  </div>
</div>
