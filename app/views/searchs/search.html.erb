<% if @model == 1.to_s %>
  <% @users.each do |user| %>
  <tr>
    <td>
    	<%= link_to user_path(user) do %>
    	  <%= attachment_image_tag(user, :image, :fill, 50, 50, fallback: "no-image.jpg") %>
    	<% end %>
    </td>
		<td><%= user.name %></td>
		<td><%= user.introduction %></td>
  </tr>
  <% end %>
<% else %>
  <% @items.each do |item| %>
  <tr>
		<td>
			<%= link_to item_path(item) do %>
				<%= attachment_image_tag(item, :image, :fill, 50, 50, fallback: "no-image.jpg") %>
			<% end %>
		</td>
		<td><%= item.title %></td>
		<td><%= item.opinion %></td>
	</tr>
  <% end %>
<% end %>