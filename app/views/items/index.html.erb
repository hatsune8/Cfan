<div class="container">
  <div class="row">

    <div class="col-xs-4">
      <%= render "items/genre" %>
    </div>

    <div class="col-xs-8">
      <h3><%= @title %>一覧</h3>
      <% if user_signed_in? %>
        <%= link_to new_item_path do %>
        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
        <% end %>
      <% end %>
      <% @items.each do |item| %>
      <div class="item-box">
        <div class="item-image">
          <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag item, :image, :fill, 220, 160, class: "image" %>
          <% end %>
        </div>
        <div class="item-text">
          <div class="item-title h3"><%= item.title %></div>
          <div class="item-opinion h4"><%= item.opinion.truncate(40) %></div>
          <!--truncate(40) 文字の表示を省略するメソッドhttps://qiita.com/ishidamakot/items/2e74d980b3a338e4c784-->
          <div class="item-genre h4"><%= item.genre %></div>
          <div class="item-favo h4"><%= item.favorites.count %>いいね<span class="glyphicon glyphicon-heart" aria-hidden="true"></span></div>
          <div class="item-comment h4"><%= item.comments.count %>件<span class="glyphicon glyphicon-comment" aria-hidden="true"></span></div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
